<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/impContactLayout">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_unchecked_24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/impContactImg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/impContactImg"
        android:layout_toEndOf="@id/impContactImg"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/impContactName"
        android:maxLines="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/impContactName"
        android:layout_toRightOf="@id/impContactImg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignBottom="@id/impContactImg"
        android:id="@+id/impContactNumber"
        android:maxLines="1"
        android:layout_toEndOf="@id/impContactImg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

