<?xml version="1.0" encoding="utf-8"?>

<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calls_card_cell"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    card_view:cardBackgroundColor="#F44336"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="6dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_phone"
            android:layout_width="45dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/round_phone_in_talk_white_48" />

        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="70dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mobilenumber_textview"
                android:layout_width="204dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/time_textview"
                android:layout_width="204dp"
                android:layout_height="35dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:textSize="15sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/playbutton"
            android:layout_width="45dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/round_play_arrow_white_48" />

        <ImageView
            android:id="@+id/backup_status"
            android:layout_width="45dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/round_cloud_off_white_48" />

    </LinearLayout>
</android.support.design.card.MaterialCardView>
